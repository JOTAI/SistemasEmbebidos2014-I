#INCLUDE <16f877a.h>
#DEVICE ICD=TRUE
#DEVICE adc=10
#FUSES HS,NOWDT,NOPROTECT,NOLVP 
#USE delay(clock=10000000) 
#USE rs232(baud=9600,parity=N,xmit=PIN_C6,rcv=PIN_C7,bits=8)  // Configuracion Comunicacion Serial
#USE FAST_IO(A) 
#USE FAST_IO(B)
#USE FAST_IO(C) 

void main (){
   int Vadc;   // Voltaje ADC
   char q;
   setup_adc_ports(AN0);
   setup_adc(adc_clock_div_32);
   
   while (TRUE){
      set_adc_channel(0);
      delay_us(20);
      Vadc=read_adc();
      delay_us(20);
      Vadc = Vadc;
      q = Vadc+48;
      putc(q);
      delay_ms(500);
   }

}


