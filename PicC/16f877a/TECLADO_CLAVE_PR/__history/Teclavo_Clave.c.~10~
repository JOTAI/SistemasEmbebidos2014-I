void Ingreso_Clave(){
   i = 0;
   pos_clave = 0;
  while (i<=4){
    tecla = kbd_getc();
    if (tecla != 0){
       if (tecla == clave[pos_clave]){
          pos_clave = 0;
       }
    }
  }
}
