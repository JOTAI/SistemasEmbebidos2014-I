#include <16f877a.h>
#fuses HS,NOWDT,NOPROTECT,NOLVP 
#use delay(clock=10000000)

#use FAST_IO(B)   //Puerto B 
#use FAST_IO(D)   //Puerto D


void main()
{
   SET_TRIS_B(0xFF);    //configura PORTB entrada / 0=salida / 1=entrada
   SET_TRIS_D(0x00);    //configura PORTD salida
   output_low(pin_d0);
   while(1)
   {
      if (input(PIN_A1) == 1 ){
         OUTPUT_D(0x00);
      }else {
         OUTPUT_D(0xFF);
      }
      delay_ms(1000);
   }

}

